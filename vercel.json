{
  "version": 2,
  "builds": [
    // HANYA KONFIGURASI STATIS YANG TERSISA
    {
      "src": "*.html",
      "use": "@vercel/static"
    },
    {
      "src": "*.js",
      "use": "@vercel/static"
    },
    {
      "src": "*.css",
      "use": "@vercel/static"
    },
    {
      "src": "assets/(.*)",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    // PENGALIHAN (REDIRECT) ke Render URL
    {
      "src": "/api/(.*)",
      "dest": "https://capstone-learnify-api.onrender.com/$1" 
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
